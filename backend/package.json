{
  "name": "crud-customer-backend",
  "version": "1.0.0",
  "description": "A backend for CRUD of Customers",
  "main": "src/shared/infra/http/server.ts",
  "repository": "https://github.com/ronielramos/CRUD-customer",
  "author": "Roniel Ramos Gomes",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "ci": "npm run lint && npm run test && npm run build",
    "dev": "nodemon src/shared/infra/http/server.ts",
    "lint": "eslint src/** --ext .ts --fix",
    "prebuild": "rimraf dist",
    "start": "npm i && pm2-runtime start dist/shared/infra/http/server.js",
    "test": "npm run test:unidade && npm run test:integracao",
    "test:integracao": "mocha --timeout 0 -r ts-node/register -r dotenv/config \"./**/*.test.ts\"",
    "test:unidade": "mocha --timeout 0 -r ts-node/register -r dotenv/config \"./**/*.spec.ts\""
  },
  "engines": {
    "node": "12.x"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "neo4j-driver": "^4.1.2",
    "pm2": "^5.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "tsyringe": "^4.3.0",
    "typescript": "^4.4.3",
    "uuid": "^8.3.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/hapi__joi": "^17.1.6",
    "@types/mocha": "^8.0.3",
    "@types/node": "14.18.30",
    "@types/uuid": "^8.3.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "chai": "^4.2.0",
    "eslint": "^7.10.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.1.3",
    "ts-node": "^9.0.0"
  }
}